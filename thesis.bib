@Article{arapuca,
  Title                    = {{ARAPUCA a new device for liquid argon scintillation light detection}},
  Author                   = {A.A. Machado and E. Segreto},
  Journal                  = {Journal of Instrumentation},
  Year                     = {2016},
  Number                   = {02},
